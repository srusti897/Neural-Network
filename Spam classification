import numpy as np
def dense_layer(x, weights, relu):
    z = np.dot(weights, x)
    return relu(z)
def relu(x):
    return np.maximum(0, x)
# Example message features
# x = [spam_keyword_count, message_length]
x = np.array([3, 120])
# Randomly chosen weights for demonstration
weights = np.array([
    [0.8, 0.01],   # neuron 1
    [0.4, 0.005]   # neuron 2
])
output = dense_layer(x, weights, relu)
print("Model Output:", output)
# simple interpretation
if output[0] > 1:
    print("Prediction: SPAM")
else:
    print("Prediction: NOT SPAM")
