# Handwritten Digit Recognition using MNIST Dataset
# TensorFlow + Keras Model
import tensorflow as tf
import numpy as np
from tensorflow.keras.datasets import mnist
from tensorflow.keras.models import Sequential
from tensorflow.keras.layers import Dense, Flatten
from tensorflow.keras.utils import to_categorical
import matplotlib.pyplot as plt
# 1. Load MNIST dataset
(x_train, y_train), (x_test, y_test) = mnist.load_data()
# 2. Normalize pixel values (0–255 → 0–1)
x_train = x_train.astype("float32") / 255
x_test = x_test.astype("float32") / 255
# 3. One-hot encode labels
y_train = to_categorical(y_train, 10)
y_test = to_categorical(y_test, 10)
# 4. Build a simple neural network model
model = Sequential([
    Flatten(input_shape=(28, 28)),     # Flatten 28x28 → 784
    Dense(128, activation='relu'),     # Hidden layer 1
    Dense(64, activation='relu'),      # Hidden layer 2
    Dense(10, activation='softmax')    # Output layer (10 digits)
])
# 5. Compile model
model.compile(optimizer='adam',
              loss='categorical_crossentropy',
              metrics=['accuracy'])
# 6. Train the model
model.fit(x_train, y_train, epochs=5, batch_size=32)
# 7. Evaluate model accuracy
loss, accuracy = model.evaluate(x_test, y_test)
print("Test Accuracy:", accuracy)
# 8. Predict a single digit
index = 0
test_image = x_test[index].reshape(1, 28, 28)
prediction = model.predict(test_image)
print("Predicted Digit:", np.argmax(prediction))
# 9. Show the image
plt.imshow(x_test[index], cmap="gray")
plt.title(f"Model Prediction: {np.argmax(prediction)}")
plt.show()
